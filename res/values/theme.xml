<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="Collect" parent="android:Theme.Light">
	    <item name="android:scrollbarThumbHorizontal">@+drawable/thumb</item>
	    <item name="android:scrollbarThumbVertical">@+drawable/thumb</item>
	    <item name="android:scrollbarSize">1.75mm</item>
	    <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
	    <!-- <item name="android:fadeScrollbars">false</item> -->
	</style>
	<style name="Collect.MainLayout">
	    <item name="android:layout_width">fill_parent</item> 
  		<item name="android:layout_height">fill_parent</item> 
  		<item name="android:background">@drawable/background</item> 
	</style>
	<style name="Collect.Button1">
	    <item name = "android:layout_width">fill_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:padding">15dp</item>
        <item name = "android:background">@drawable/my_button_bg</item>
        <item name = "android:textSize">21sp</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:layout_margin">2dp</item>
	</style>
	<style name="Collect.Button2">
	    <item name = "android:layout_width">fill_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:padding">10dp</item>
        <item name = "android:textSize">16sp</item>
        <item name = "android:background">@drawable/my_button_bg</item>
        <item name = "android:layout_margin">1dp</item>
	</style>
	<style name="Collect.List">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
		<item name="android:divider">@drawable/h_divider</item>
		
	</style>
</resources>
